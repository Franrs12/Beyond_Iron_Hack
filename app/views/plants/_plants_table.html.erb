<table class="pretty">
    <thead>
      <tr>
        <th><%= sortable "common_name", "Nombre común" %></th>
        <th><%= sortable "scientific_name", "Nombre científico" %></th>
        <th><%= sortable "min_temp", "Temperatura mínima" %></th>
        <th><%= sortable "max_temp", "Temperatura máxima" %></th>
        <th>Imagen</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @plants.each do |plant| %>
        <tr>
          <td><%= plant.common_name %></td>
          <td id="scientific_name"><%= plant.scientific_name %></td>
          <td><%= plant.min_temp %> ºC</td>
          <td><%= plant.max_temp %> ºC</td>
          <td class="thumbnail images_in_index"><img src="<%= plant.url_image %>"></td>
          <td><%= link_to 'Mostrar', plant %></td>
          <td><%= link_to 'Editar', edit_plant_path(plant) %></td>
          <td><%= link_to 'Borrar', plant, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<%= will_paginate @plants %>